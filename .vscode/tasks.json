{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "mvn -B compile",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "mvn -B clean",
            "group": "build"
        },
        {
            "label": "install",
            "type": "shell",
            "command": "mvn -B install",
            "group": "build"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "mvn -B test",
            "group": "test"
        },
        {
            "label": "package",
            "type": "shell",
            "command": "mvn -B mvn clean javafx:run",
            "group": "build"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "mvn -B javafx:run",
            "group": "test"
        },
        {
            "label": "profile",
            "type": "shell",
            "command": "/opt/async-profiler/bin/asprof -d 15 -f ff.html $(pgrep -f app.MainApp)",
            "group": "test",
            "presentation": { "clear": true },
        }
    ]
}
